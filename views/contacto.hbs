                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Page content-->
            <section class="py-5">
                <div class="container px-5">
                    <!-- Contact form-->
                    <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                        <div class="text-center mb-5">
                            <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                            <h1 class="fw-bolder">Contacta con nosotros</h1>
                            <p class="lead fw-normal text-muted mb-0">Queremos saber de tí</p>
                        </div>
                        <div class="row gx-5 justify-content-center">
                            <div class="col-lg-8 col-xl-6">
                                <!-- * * * * * * * * * * * * * * *-->
                                <!-- * * SB Forms Contact Form * *-->
                                <!-- * * * * * * * * * * * * * * *-->
                                <!-- This form is pre-integrated with SB Forms.-->
                                <!-- To make this form functional, sign up at-->
                                <!-- https://startbootstrap.com/solution/contact-forms-->
                                <!-- to get an API token!-->
                                <form id="contactForm" data-sb-form-api-token="API_TOKEN" action="/api/clientes/add"
                                enctype="application/x-www-form-urlencoded" method="post">
                                    <!-- Name input-->
                                    <div class="form-floating mb-3">
                                        <input id="nombre" name="nombre" type="text" placeholder="Nombre completo" class="form-control" required>
                                        <label for="name">Nombre completo</label>
                                        <div class="invalid-feedback" data-sb-feedback="name:required">Debes escribir tu nombre</div>
                                    </div>
                                    <!-- Email address input-->
                                    <div class="form-floating mb-3">
                                        <input type="email" id="email" name="email" type="text" placeholder="Email" class="form-control" required>
                                        <label for="email">Email</label>
                                
                                    </div>
                                    <!-- Phone number input-->
                                    <div class="form-floating mb-3">
                                        <input type="number" id="teléfono" name="teléfono" type="text" placeholder="Teléfono" class="form-control" required>
                                        <label for="phone">Teléfono</label>
                                        <div class="invalid-feedback" data-sb-feedback="phone:required">Debes poner tu teléfono</div>
                                    </div>
                                    <!-- Message input-->
                                    <div class="form-floating mb-3">
                                        <textarea class="form-control" id="mensaje" name="mensaje" placeholder="Escribe aquí tu mensaje." rows="7"></textarea required>
                                        <label for="message">Mensaje</label>
                                        <div class="invalid-feedback" data-sb-feedback="message:required">Debes escribir un mensaje</div>
                                    </div>
                                    <div class="form-floating mb-3">
                                    <div class="col-md-8">
                                        <input class="form-check-input" type="checkbox" value="" id="chekedad" required>
                                        <label class="form-check-label" for="flexCheckChecked">
                                            Confirmo que soy mayor de edad
                                        </label>
                                    </div>
                                    <div class="col-md-8">
                                       <input class="form-check-input" type="checkbox" value="" id="chekedprivacidad" required>
                                        <label class="form-check-label" for="flexCheckChecked">
                                            Acpeto la política de privacidad
                                        </label>
                                    </div>
                                    </div>
                                    <!-- Submit Button-->
                                    <div class="d-grid"><button class="btn btn-primary btn-lg" id="submitButton" type="submit">Submit</button></div>
                                </form>
                            </div>
                        </div>
                    </div>
                    
            </section>
        </main>
        <!-- Footer-->
        <footer class="bg-dark py-4 mt-auto">
            <div class="container px-5">
